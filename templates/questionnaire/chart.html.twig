{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>ChartJs</h1>
<canvas id="myChart" width="400" height="400"></canvas>
<script src="{{ asset('build/js/jquery-3.3.1.js') }}"></script>
<script src="{{ asset('build/js/Chart.js') }}"></script>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var data;
var label =[];
var rep =[];
    $.ajax({
            method: "get",
            url: window.location + "/get",
            dataType: "json",
        }).done(function (response) {
            data = response.datas;
{#            console.log((response.datas[0].nomCat));#}
{#            for(var i = 0; i< data.length; i++){
                label.push(data[0].ListeQuestions[0].ListeReponses[i].nomReponse);
                rep.push(data[0].ListeReponses[0].ListeReponses[i].nbSelection);
            }#}
console.log(data[0]);
            var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: label,
        datasets: [{
            label: data[0].ListeQuestions[0].nomQuestion,
            data: [rep],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
        }).fail(function (xhr, status, error) {

            alert(xhr.responseText)
            console.log(status);
            console.log(error);
        });

</script>
        
        
    </div>
{% endblock body %}