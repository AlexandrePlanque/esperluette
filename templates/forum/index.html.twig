{% extends 'base.html.twig' %}

{% block title %} 
Forum
{% endblock %}
{% block stylesheets %}
    {{parent()}}
    <link rel="icon" href="{{ asset("./build/img/espe.png") }}" type="image/x-icon">
    <link rel="stylesheet" href="{{ asset('build/css/forum-style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/secondary-style.css') }}">
{% endblock %}

{% block body %}

{% block NavBar %}
    <div class="container">
        <nav class="navbar navbar-expand-md top-nav ">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}"><strong>& Esperluette</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="fa fa-bars" aria-hidden="true"></i></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('home')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('about')}}">Le projet<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-toggle="modal" data-target="#loginModal">Se connecter</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path("deconnexion") }}">Déconnexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </div>
{% endblock %}

 <div class="container">

      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8 my-4" id="tabForum">
            {% if app.user %}
            <button class="btn btn-info mb-2" type="button" id="toggleForm">Publier</button>
            {% endif %}
                    {% for theme in themes %}
            <div class="forumContent" id="tab{{ theme.theme }}">
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <td>Titre</td>
                            <td>Auteur</td>
                            <td>Date de publication</td>
                        </tr>
                    </thead>
                {% for sujet in theme.sujets %}
                    <tr id="{{ sujet.id }}">
                        <td>{{ sujet.intitule }}</td>
                        <td>{{ sujet.auteur.nom }} {{ sujet.auteur.prenom}}</td>
                        <td>{{ sujet.dateCreation|date("d/m/Y à H:i:s") }}</td>
                    </tr>
                {% endfor %}  
                </table>
            </div>
        {% endfor %}  
            <div class="ajoutPubli">
                <form id="publicationForm">
                    <div class='row'>
                        <div class="form-group col-md-12 active-cyan-4">
                            <label for="titre">Titre de la publication</label>
                            <input type="text" id="titre" name="titre" class="form-control" placeholder="" required="" required oninvalid="this.setCustomValidity('Veuillez renseigner ce champ')"oninput="setCustomValidity('')">
                        </div>
                        <div class="form-group col-md-12 active-cyan-4">
                            <label for="corps">Votre message</label>
                            <textarea class="form-control" rows="5" id="corps">
                            </textarea>
                        </div>
                    </div>
                    <button class="btn btn-success float-right" type="submit">Valider</button>
                </form>
            </div>
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Sections</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-12">
                  <ul class="list-unstyled mb-0" id="btnCatForum">
                    {% for theme in themes %}
                        <a href="#tab{{ theme.theme }}" class="list-group-item">
                            <i class="fa fa-comment-o"></i> <span>{{ theme.theme }}</span>
                        </a>
                    {% endfor %}
                  </ul>
                </div>

              </div>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Dernière publication</h5>
            <div class="card-body">
                <p>Par {{ lastmsg.auteur.prenom }} le {{ lastmsg.dateCreation|date('d/m/Y à H:i:s') }}</p>
                <p >Publié à la suite du sujet {{lastmsg.sujet.intitule}}</p>
                <a href="{{path('forum')}}/sujet/{{lastmsg.sujet.id}}">Consulter la publication</a>
            </div>
          </div>

        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

	<!-- Modal LOGIN-->
	<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Se connecter</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">email</div>
							</div>
							<input type="text" class="form-control" id="login" value="">
					</div>
					<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">Mot de passe</div>
							</div>
							<input class="form-control" type="password" id="password" value="">
					</div>
                                    <a href="{{path('inscription')}}">Vous n'est pas encore inscrit ? C'est par ici !</a>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-danger" data-dismiss="modal">Annuler</button>
					<button type="button" class="btn btn-outline-primary" onclick="checkMyName();">Valider</button>
				</div>
			</div>
		</div>
	</div>
        
<script src="{{ asset('build/js/jquery-3.3.1.js') }}"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="{{ asset('build/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('build/js/notify.min.js') }}"></script>
<script src="{{ asset('build/js/forum.js') }}"></script>
{% endblock %}
