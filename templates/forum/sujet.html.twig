{% extends 'base.html.twig' %}

{% block title %} 
Forum
{% endblock %}
{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('build/css/forum-style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/secondary-style.css') }}">
{% endblock %}

{% block body %}

{% block NavBar %}
    <div class="container">
        <nav class="navbar navbar-expand-md top-nav ">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}"><strong>Esperluette</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="fa fa-bars" aria-hidden="true"></i></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('home')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('about')}}">Le projet<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="contact.html" data-toggle="modal" data-target="#loginModal">Se connecter</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path("deconnexion") }}">Déconnexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </div>
{% endblock %}

 <div class="container">

      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8 my-4" id="tabForum">
            <div class="msgListing">
                <div class="form-group"
                    <h4>Vous consulter le sujet {{ sujet.intitule }}</h4><a class="float-right" href="{{ path('forum') }}"><i class="fa fa-arrow-left fa-2x text-danger" aria-hidden="true"></i></a>
                </div>
            {% for message in sujet.messages %}
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="card-title cardMessage">
                            <span class="card-title nomPrenomMessage"><strong>{{ message.auteur.prenom }} {{ message.auteur.nom }}</strong></span><span class="float-right">{{ message.dateCreation|date("d/m/Y  H:i:s")}}</span>
                        </div><hr>
                    <p class="card-text">{{ message.corps}}</p>
                    </div>
                </div>
            {% endfor %}
            </div>
            <nav aria-label="Page navigation example">
                <ul id='page' class='pagination'>
                    <li class="nav-item" id="previous">
                        <a class="page-link" aria-label="Précédent" onclick="nextPrev(-1)">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Précédent</span>
                        </a>
                    </li>
                    <li class="nav-item" id="next">
                        <a class="page-link" aria-label="Suivant" onclick="nextPrev(1)">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Suivant</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <hr id="endMessage">
            
            <div class="form-group">
  <label for="comment">Réponse :</label>
  <textarea class="form-control" rows="5" id="comment"></textarea>
            <button class="btn btn-success mt-1 float-right" id="reponseSujet">Répondre</button
            <!-- textarea hidden suite à un bug d'affichage indeterminer -->
{#            <textarea class="form-control hidden" rows="5" id="comment"></textarea>#}
    </div>
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Sections</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-12">
                  <ul class="list-unstyled mb-0" id="btnCatForum">
                    {% for theme in themes %}
                        <a href="#tab{{ theme.theme }}" class="list-group-item">
                            <i class="fa fa-comment-o"></i> {{ theme.theme }}
                        </a>
                    {% endfor %}
                  </ul>
                </div>

              </div>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Dernière publication</h5>
            <div class="card-body">
              You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
          </div>

        </div>

      </div>
      <!-- fin de la row -->

    </div>
    <!-- fin du container -->




	<!-- Modal LOGIN-->
	<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Se connecter</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">email</div>
							</div>
							<input type="text" class="form-control" id="login" value="">
					</div>
					<div class="form-group">
							<div class="input-group-prepend">
								<div class="input-group-text">Mot de passe</div>
							</div>
							<input class="form-control" type="password" id="password" value="">
					</div>
                                    <a href="{{path('inscription')}}">Vous n'est pas encore inscrit ? C'est par ici !</a>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-danger" data-dismiss="modal">Annuler</button>
					<button type="button" class="btn btn-outline-primary">Valider</button>
				</div>
			</div>
		</div>
	</div>
        
        
<script src="{{ asset('build/js/jquery-3.3.1.js') }}"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="{{ asset('build/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('build/js/notify.min.js') }}"></script>
<script src="{{ asset('build/js/forum.js') }}"></script>
<script src="{{ asset('build/js/message.js') }}"></script>
{% endblock %}
